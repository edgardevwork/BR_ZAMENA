<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/containerColorPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.blackhub.bronline.game.common.colorpickerview.ColorPickerView
                android:layout_gravity="center"
                android:id="@+id/colorPickerView"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_margin="20dp"
                app:selector="@drawable/ic_wheel"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/containerAlphaSlideBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.blackhub.bronline.game.common.colorpickerview.sliders.AlphaSlideBar
                android:id="@+id/alphaSlideBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                app:selector_AlphaSlideBar="@drawable/ic_wheel"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/containerBrightnessSlideBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.blackhub.bronline.game.common.colorpickerview.sliders.BrightnessSlideBar
                android:id="@+id/brightnessSlideBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                app:selector_BrightnessSlider="@drawable/ic_wheel"/>
        </FrameLayout>
        <Space
            android:id="@+id/space_bottom"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
    </LinearLayout>
</ScrollView>
