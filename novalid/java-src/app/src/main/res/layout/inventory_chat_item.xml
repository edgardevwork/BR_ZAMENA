<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp">
    <TextView
        android:textSize="12sp"
        android:textColor="@color/white"
        android:id="@+id/chat_players_nick"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_alignStart="@+id/chat_text_message"/>
    <TextView
        android:textColor="@color/black"
        android:id="@+id/chat_text_message"
        android:background="@drawable/bg_rectangle_light_gray_cr4"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="400dp"
        android:layout_below="@+id/chat_players_nick"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>
    <RelativeLayout
        android:id="@+id/block_with_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:textColor="@color/white"
            android:id="@+id/final_action_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"/>
    </RelativeLayout>
</RelativeLayout>
