<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_backprize"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/black"
        android:id="@+id/bpd_prize_title"
        android:background="@drawable/bg_rectangle_yellow_crb15"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/black_pass_prize_title_1"
        android:textAllCaps="true"
        android:fontFamily="@font/muller_bold"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/bpd_prize_img"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_180sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/_18ssp"
        android:textColor="@color/white"
        android:id="@+id/bpd_prize_prize_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:fontFamily="@font/muller_bold"
        app:layout_constraintBottom_toTopOf="@+id/bpd_prize_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bpd_prize_title"/>
    <androidx.appcompat.widget.AppCompatButton
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/white"
        android:id="@+id/bpd_prize_get"
        android:background="@drawable/bg_button_red_cr5_t1_white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/common_take"
        android:textAllCaps="true"
        android:fontFamily="@font/muller_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bpd_prize_img"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bpd_prize_close"
        android:background="@drawable/ic_close_big_in_oval"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
