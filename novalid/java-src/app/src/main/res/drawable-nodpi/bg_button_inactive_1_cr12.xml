<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#ff6c7198"
                android:endColor="#ff2a2d48"
                android:angle="270"
                android:centerColor="#ff2a2d48"/>
            <corners android:radius="12dp"/>
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ff383c60"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <item android:drawable="@drawable/bg_button_inactive_1"/>
</layer-list>
