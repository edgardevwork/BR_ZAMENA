<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="#ff9e0202">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#ff9e0202"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#ffff6317"
                android:endColor="#ffc50000"
                android:angle="0"
                android:type="linear"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
</ripple>
