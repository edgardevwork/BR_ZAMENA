<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/white"
                android:endColor="#ff2c3347"
                android:angle="270"
                android:centerColor="#ff2c3347"/>
            <corners android:radius="4dp"/>
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_gray_blue"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list>
