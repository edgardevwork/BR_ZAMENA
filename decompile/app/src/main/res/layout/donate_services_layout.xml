<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/donate_service_current_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="1.5"
        android:layout_marginStart="55dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/list_ll_1"
        android:background="@drawable/bg_rectangle_gray_cr5_t1_white_gradient"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="1"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="40dp">
        <TextView
            android:textSize="@dimen/_10ssp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/donate_services_list_title"
            android:textAllCaps="true"
            android:fontFamily="@font/muller_bold"
            android:layout_marginEnd="20dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:scrollbarThumbVertical="@drawable/bg_scroll_thumb_yellow_white_hgr_cr4"
            android:scrollbarTrackVertical="@drawable/bg_scroll_track_black93_cr4"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarStyle="outsideInset"
            android:id="@+id/donateServicesRV"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false"
            android:layout_marginEnd="4dp"/>
    </LinearLayout>
</LinearLayout>
