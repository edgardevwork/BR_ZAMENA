<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black_50"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/dialog_apply_bg_view"
        android:background="@drawable/bg_rectangle_black_orange_small_dgr"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/dialog_apply_body_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button_apply"
        app:layout_constraintEnd_toEndOf="@+id/dialog_apply_bg_view"
        app:layout_constraintStart_toStartOf="@+id/dialog_apply_bg_view"
        app:layout_constraintTop_toTopOf="@+id/dialog_apply_bg_view"/>
    <androidx.appcompat.widget.AppCompatButton
        android:textColor="@color/white"
        android:id="@+id/button_apply"
        android:background="@drawable/bg_button_red"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:text="@string/common_apply"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_apply_bg_view"
        app:layout_constraintEnd_toStartOf="@+id/button_cancel"
        app:layout_constraintStart_toStartOf="@+id/dialog_apply_bg_view"/>
    <androidx.appcompat.widget.AppCompatButton
        android:textColor="@color/white"
        android:id="@+id/button_cancel"
        android:background="@drawable/bg_button_red_unfilled"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:text="@string/families_apply_window_button_cancel"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_apply_bg_view"
        app:layout_constraintEnd_toEndOf="@+id/dialog_apply_bg_view"
        app:layout_constraintStart_toEndOf="@+id/button_apply"/>
</androidx.constraintlayout.widget.ConstraintLayout>
