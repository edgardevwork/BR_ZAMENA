<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/ivHintDrivingSchooInstructor"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15"
        app:srcCompat="@drawable/img_instructor"/>
    <TextView
        android:textSize="10sp"
        android:textColor="#ffffffff"
        android:id="@+id/tvHintDrivingSchoolInstructor"
        android:background="@drawable/bg_rectangle_gray75_cr10"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:visibility="invisible"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@+id/ivHintDrivingSchooInstructor"
        app:layout_constraintTop_toTopOf="@+id/blockHintDrivingSchoolTasks"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/blockHintDrivingSchoolTasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        app:layout_constraintEnd_toStartOf="@+id/ivHintDrivingSchooInstructor"
        app:layout_constraintTop_toTopOf="@+id/ivHintDrivingSchooInstructor">
        <TextView
            android:textSize="10sp"
            android:textColor="#ffffde67"
            android:id="@+id/tvHintDrivingSchoolMainTitle"
            android:background="@drawable/bg_rectangle_gray75_crt10"
            android:paddingTop="8dp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="@string/tutorial_general_task"
            android:fontFamily="@font/montserrat_bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginEnd="10dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHintDrivingSchoolMainQuests"
            android:background="@color/black_80"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
        <View
            android:id="@+id/underlineHintDrivingSchool"
            android:background="#ff3c3d4b"
            android:layout_width="0dp"
            android:layout_height="2dp"/>
        <TextView
            android:textSize="10sp"
            android:textColor="#ff67ff88"
            android:id="@+id/tvHintDrivingSchoolAdditionalTitle"
            android:background="#c0212333"
            android:paddingTop="8dp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="@string/tutorial_additional_tasks"
            android:fontFamily="@font/montserrat_bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHintDrivingSchoolAdditionalQuests"
            android:background="@drawable/bg_rectangle_gray75_crb10"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:maxHeight="100dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
        <TextView
            android:textSize="10sp"
            android:textColor="@color/white"
            android:id="@+id/tvHintDrivingSchoolTextIfWithoutAdditionalQuests"
            android:background="@drawable/bg_rectangle_gray75_crb10"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="@string/tutorial_not_found"
            android:fontFamily="@font/montserrat_bold"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
