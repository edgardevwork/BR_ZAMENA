<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@color/black_50"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="15dp">
    <View
        android:id="@+id/bg_effect_shadow"
        android:background="@drawable/bg_rectangle_red_vgr_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/main_view_new_rank"
        android:background="@drawable/bg_fractions_progress_in_organisation_item_main"
        android:layout_width="400dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/bg_view_ellipse"
        android:background="@drawable/bg_fractions_new_rank_ellipse"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/main_view_new_rank"
        app:layout_constraintEnd_toEndOf="@+id/main_view_new_rank"
        app:layout_constraintStart_toStartOf="@+id/main_view_new_rank"
        app:layout_constraintTop_toTopOf="@+id/main_view_new_rank"/>
    <TextView
        android:id="@+id/text_view_congratulation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/common_congratulation"
        app:layout_constraintBottom_toTopOf="@+id/text_view_new_rank_received"
        app:layout_constraintEnd_toEndOf="@+id/main_view_new_rank"
        app:layout_constraintStart_toStartOf="@+id/main_view_new_rank"
        app:layout_constraintTop_toTopOf="@+id/main_view_new_rank"
        style="@style/MontserratBold28spColorFFA61D"/>
    <TextView
        android:id="@+id/text_view_new_rank_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fractions_new_rank_received"
        app:layout_constraintBottom_toTopOf="@+id/image_view_staff_rank"
        app:layout_constraintEnd_toEndOf="@+id/main_view_new_rank"
        app:layout_constraintStart_toStartOf="@+id/main_view_new_rank"
        app:layout_constraintTop_toBottomOf="@+id/text_view_congratulation"
        style="@style/MontserratRegular14spOr11ssp"/>
    <TextView
        android:textSize="24sp"
        android:gravity="center"
        android:id="@+id/text_view_rank"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button_get_reward"
        app:layout_constraintStart_toStartOf="@+id/text_view_new_rank_received"
        app:layout_constraintTop_toBottomOf="@+id/text_view_new_rank_received"
        style="@style/MontserratBold13spOr10ssp"/>
    <ImageView
        android:id="@+id/image_view_lavr"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/img_laurel"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_rank"
        app:layout_constraintEnd_toEndOf="@+id/text_view_rank"
        app:layout_constraintStart_toStartOf="@+id/text_view_rank"
        app:layout_constraintTop_toTopOf="@+id/text_view_rank"/>
    <ImageView
        android:id="@+id/image_view_staff_rank"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/fractions_content_description_icon_of_new_rank"
        app:layout_constraintBottom_toTopOf="@+id/button_get_reward"
        app:layout_constraintEnd_toEndOf="@+id/text_view_new_rank_received"
        app:layout_constraintTop_toBottomOf="@+id/text_view_new_rank_received"/>
    <TextView
        android:id="@+id/text_view_reward_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/iv_award_1"
        app:layout_constraintEnd_toEndOf="@+id/iv_award_1"
        app:layout_constraintStart_toStartOf="@+id/iv_award_1"
        style="@style/MontserratBoldItalic8sp"/>
    <ImageView
        android:id="@+id/iv_award_1"
        android:background="@drawable/bg_families_accessories"
        android:padding="7dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_money_rubles"
        android:scaleType="centerCrop"
        android:contentDescription="@string/fractions_quest_award_content_description"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_award_2"
        app:layout_constraintEnd_toStartOf="@+id/iv_award_2"
        app:layout_constraintTop_toTopOf="@+id/iv_award_2"/>
    <TextView
        android:id="@+id/text_view_reward_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/iv_award_2"
        app:layout_constraintEnd_toEndOf="@+id/iv_award_2"
        app:layout_constraintStart_toStartOf="@+id/iv_award_2"
        style="@style/MontserratBoldItalic8sp"/>
    <ImageView
        android:id="@+id/iv_award_2"
        android:background="@drawable/bg_families_accessories"
        android:padding="7dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_money_star_1"
        android:contentDescription="@string/fractions_quest_award_content_description"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_get_reward"
        app:layout_constraintEnd_toStartOf="@+id/iv_award_3"
        app:layout_constraintStart_toStartOf="@+id/text_view_new_rank_received"
        app:layout_constraintTop_toTopOf="@+id/button_get_reward"/>
    <TextView
        android:id="@+id/text_view_reward_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/iv_award_3"
        app:layout_constraintEnd_toEndOf="@+id/iv_award_3"
        app:layout_constraintStart_toStartOf="@+id/iv_award_3"
        style="@style/MontserratBoldItalic8sp"/>
    <ImageView
        android:id="@+id/iv_award_3"
        android:background="@drawable/bg_families_accessories"
        android:padding="7dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/img_money_box"
        android:contentDescription="@string/fractions_quest_award_content_description"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_get_reward"
        app:layout_constraintStart_toEndOf="@+id/iv_award_2"
        app:layout_constraintTop_toTopOf="@+id/button_get_reward"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_get_reward"
        android:background="@drawable/bg_button_apply"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="@string/common_get"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/main_view_new_rank"
        app:layout_constraintEnd_toEndOf="@+id/main_view_new_rank"
        app:layout_constraintStart_toEndOf="@+id/iv_award_3"
        app:layout_constraintTop_toBottomOf="@+id/image_view_staff_rank"
        style="@style/MontserratBold13spOr10ssp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
