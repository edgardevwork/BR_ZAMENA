<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_rectangle_white15_cr5"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_26sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    android:layout_marginEnd="10dp">
    <View
        android:id="@+id/top_position_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/players_nick"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/_8ssp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/top_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/top_position_bg"
        app:layout_constraintStart_toStartOf="@+id/top_position_bg"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/left_icon"
        android:layout_width="8dp"
        android:layout_height="@dimen/_18sdp"
        app:layout_constraintBottom_toBottomOf="@+id/top_position"
        app:layout_constraintEnd_toStartOf="@+id/top_position"
        app:layout_constraintTop_toTopOf="@+id/top_position"/>
    <ImageView
        android:id="@+id/right_icon"
        android:layout_width="8dp"
        android:layout_height="@dimen/_18sdp"
        app:layout_constraintBottom_toBottomOf="@+id/top_position"
        app:layout_constraintStart_toEndOf="@+id/top_position"
        app:layout_constraintTop_toTopOf="@+id/top_position"/>
    <TextView
        android:textSize="@dimen/_7ssp"
        android:textColor="@color/white"
        android:id="@+id/players_nick"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textAllCaps="true"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/game_icon"
        app:layout_constraintHorizontal_weight="4"
        app:layout_constraintStart_toEndOf="@+id/top_position_bg"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:gravity="center"
        android:id="@+id/game_icon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:src="@drawable/img_battleground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/players_games"
        app:layout_constraintHorizontal_weight="2.5"
        app:layout_constraintStart_toEndOf="@+id/players_nick"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/_8ssp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/players_games"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/game_icon"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
