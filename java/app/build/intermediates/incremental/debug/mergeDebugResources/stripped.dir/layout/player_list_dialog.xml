<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_players_list"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="center_vertical"
        android:id="@+id/text_view_players_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/common_players_list"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toStartOf="@+id/search_view"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:textSize="13sp"
        android:textColor="@color/white"
        android:id="@+id/search_view"
        android:background="@drawable/bg_rectangle_white17_cr20"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:hint="@string/players_list_search_hint"
        android:inputType="text"
        android:imeOptions="flagNoExtractUi|flagNoFullscreen|actionSend"
        android:paddingStart="10dp"
        android:importantForAutofill="no"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_players_list"
        app:layout_constraintEnd_toStartOf="@+id/players_list_value_players"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@+id/text_view_players_list"
        app:layout_constraintTop_toTopOf="@+id/text_view_players_list"
        style="@style/MyTextViewTheme"/>
    <ImageView
        android:id="@+id/icon_clear_search_text"
        android:padding="10dp"
        android:visibility="invisible"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:contentDescription="@string/common_close"
        app:layout_constraintBottom_toBottomOf="@+id/search_view"
        app:layout_constraintEnd_toEndOf="@+id/search_view"
        app:layout_constraintTop_toTopOf="@+id/search_view"
        app:srcCompat="@drawable/ic_close_old"/>
    <ImageView
        android:id="@+id/icon_search_view"
        android:visibility="visible"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_search"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/search_view"
        app:layout_constraintEnd_toEndOf="@+id/search_view"
        app:layout_constraintTop_toTopOf="@+id/search_view"/>
    <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/players_list_value_players"
        android:background="@drawable/bg_rectangle_red_hgr_cr20"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_players_list"
        app:layout_constraintEnd_toStartOf="@+id/players_list_close"
        app:layout_constraintStart_toEndOf="@+id/search_view"
        app:layout_constraintTop_toTopOf="@+id/text_view_players_list"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_gravity="center"
        android:id="@+id/players_list_close"
        android:background="@drawable/ic_close_old"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:contentDescription="@string/common_close"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_players_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/players_list_value_players"
        app:layout_constraintTop_toTopOf="@+id/text_view_players_list"
        style="@style/MyTextViewTheme"/>
    <TextView
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/text_view_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/players_list_header_first_column"
        android:layout_marginStart="40dp"
        app:layout_constraintEnd_toStartOf="@+id/text_view_nick_name"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_players_list"/>
    <TextView
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/text_view_nick_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/players_list_header_second_column"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_id"
        app:layout_constraintEnd_toStartOf="@+id/text_view_level"
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintStart_toEndOf="@+id/text_view_id"
        app:layout_constraintTop_toTopOf="@+id/text_view_id"/>
    <TextView
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/text_view_level"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/players_list_header_third_column"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_id"
        app:layout_constraintEnd_toStartOf="@+id/text_view_ping"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@+id/text_view_nick_name"
        app:layout_constraintTop_toTopOf="@+id/text_view_id"/>
    <TextView
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/text_view_ping"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/players_list_header_fourth_column"
        android:layout_marginEnd="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/text_view_level"
        app:layout_constraintTop_toTopOf="@+id/text_view_id"/>
    <View
        android:background="@drawable/bg_rectangle_orange_hgr_cr8_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@+id/text_view_id"/>
    <androidx.recyclerview.widget.RecyclerView
        android:scrollbarThumbVertical="@drawable/bg_scroll_thumb_red_hgr_cr8"
        android:scrollbarTrackVertical="@drawable/bg_scroll_black30_cr8"
        android:id="@+id/recycler_view_players_list"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_id"/>
</androidx.constraintlayout.widget.ConstraintLayout>
