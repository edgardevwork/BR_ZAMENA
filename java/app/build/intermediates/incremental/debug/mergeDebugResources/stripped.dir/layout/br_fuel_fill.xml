<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/fuel_fill_root"
    android:background="@drawable/bg_rectangle_black73_47_cr10"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:weightSum="1">
    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:gravity="left"
            android:layout_gravity="start"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextSwitcher
                    android:id="@+id/br_dialog_fuel_fill_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:text="Рекомендуемый вид топлива: АИ-92"
                        android:drawableLeft="@drawable/ic_warning_message_old_25"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/muller_bold"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:text="Рекомендуемый вид топлива: АИ-92"
                        android:drawableLeft="@drawable/ic_warning_message_old_25"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/muller_bold"/>
                </TextSwitcher>
                <ImageView
                    android:gravity="center"
                    android:id="@+id/br_dialog_fuel_fill_close"
                    android:padding="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_close_rounded"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="15dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:textColor="@android:color/white"
                    android:id="@+id/br_fuel_fill_button_0"
                    android:background="@drawable/bg_rectangle_black53_cr10"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:text="Button"
                    android:layout_weight="1"
                    android:lineSpacingExtra="8sp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/muller_regular"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:textColor="@android:color/white"
                    android:id="@+id/br_fuel_fill_button_1"
                    android:background="@drawable/bg_rectangle_black73_47_crb10"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="Button"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:fontFamily="@font/muller_regular"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:textColor="@android:color/white"
                    android:id="@+id/br_fuel_fill_button_2"
                    android:background="@drawable/bg_rectangle_black53_cr10"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="Button"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:fontFamily="@font/muller_regular"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:textColor="@android:color/white"
                    android:id="@+id/br_fuel_fill_button_3"
                    android:background="@drawable/bg_rectangle_black53_cr10"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="Button"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:fontFamily="@font/muller_regular"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:textColor="@android:color/white"
                    android:id="@+id/br_fuel_fill_button_4"
                    android:background="@drawable/bg_rectangle_black53_cr10"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="Button"
                    android:layout_weight="1"
                    android:lineSpacingExtra="8sp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/muller_regular"/>
            </LinearLayout>
            <SeekBar
                android:id="@+id/br_fuel_fill_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:max="200"
                android:progress="50"
                android:indeterminateDrawable="@drawable/bg_progress_br"
                style="@style/MySeekBar"/>
            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="25dp">
                <TextView
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:id="@+id/br_fuel_fill_litres"
                    android:background="@drawable/bg_rectangle_black53_cr10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="3500 л"
                    android:layout_weight="1.15"
                    android:fontFamily="@font/montserrat_bold"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:id="@+id/br_fuel_fill_buy"
                    android:background="@drawable/bg_button_red"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Оплатить"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:fontFamily="@font/muller_bold"/>
                <com.blackhub.bronline.game.common.CountAnimationTextView
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:id="@+id/br_fuel_fill_price"
                    android:background="@drawable/bg_rectangle_black53_cr10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="5000 р"
                    android:layout_weight="1.15"
                    android:fontFamily="@font/muller_bold"/>
            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>
