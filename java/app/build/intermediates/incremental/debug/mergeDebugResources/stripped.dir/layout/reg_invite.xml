<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="25dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.blackhub.bronline.game.common.CustomEditTextWithBackPressEvent
        android:textSize="11sp"
        android:textColor="#ffffffff"
        android:textColorHint="#ff8a92aa"
        android:gravity="center"
        android:id="@+id/invite_nick"
        android:background="@drawable/bg_rectangle_gray_cr4_2"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="visible"
        android:longClickable="true"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="5dp"
        android:hint="Введите никнейм пригласившего"
        android:ems="10"
        android:singleLine="true"
        android:maxLength="24"
        android:inputType="text"
        android:imeOptions="flagNoExtractUi|flagNoFullscreen|actionSend"
        android:fontFamily="@font/montserrat_regular"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="15dp">
        <View
            android:id="@+id/view9"
            android:background="#ffe2310c"
            android:layout_width="3dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="11sp"
            android:textColor="#ffffffff"
            android:gravity="left"
            android:layout_gravity="center"
            android:id="@+id/text_invite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:text="Введя никнейм пригласившего вас игрока, он и вы получите ценные призы по достижению 3 уровня!"
            android:fontFamily="@font/montserrat_regular"/>
    </FrameLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:textColor="#ffffffff"
        android:id="@+id/but_continue"
        android:background="@drawable/bg_button_red_cr5_t1_white"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="5dp"
        android:text="Продолжить"
        android:fontFamily="@font/montserrat_bold"/>
    <androidx.appcompat.widget.AppCompatButton
        android:textColor="#ffffffff"
        android:id="@+id/but_skip"
        android:background="@drawable/bg_button_blue_cr5_t1_white"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:text="Пропустить"
        android:fontFamily="@font/montserrat_bold"/>
</LinearLayout>
