<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_rectangle_black30_cr5"
    android:layout_width="match_parent"
    android:layout_height="27dp"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="30dp">
    <TextView
        android:textSize="12sp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:id="@+id/player_id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toStartOf="@+id/player_name"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginStart="20dp"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:id="@+id/player_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toStartOf="@+id/player_level"
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintStart_toEndOf="@+id/player_id"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:id="@+id/player_level"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toStartOf="@+id/player_ping"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@+id/player_name"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:id="@+id/player_ping"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/player_level"/>
</androidx.constraintlayout.widget.ConstraintLayout>
