<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/social_network_link_button_border"
        android:background="@drawable/bg_rectangle_transparent_cr5_t1_blue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.25"/>
    <View
        android:id="@+id/social_network_link_button_icon"
        android:background="@drawable/img_vk_active"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/social_network_link_button_border"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@+id/social_network_link_button_border"
        app:layout_constraintTop_toTopOf="@+id/social_network_link_button_border"/>
    <TextView
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:id="@+id/social_network_link_button_name"
        android:background="@drawable/bg_rectangle_red_transparent_hgr"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:textAllCaps="true"
        android:fontFamily="@font/montserrat_bold"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/social_network_link_button_border"
        app:layout_constraintEnd_toEndOf="@+id/social_network_link_button_border"
        app:layout_constraintStart_toEndOf="@+id/social_network_link_button_icon"
        app:layout_constraintTop_toTopOf="@+id/social_network_link_button_border"/>
    <View
        android:id="@+id/social_network_link_button_aura"
        android:background="@drawable/bg_button_aura_blue"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/social_network_link_button_bg_color_not_active"
        android:background="@color/black_50"
        android:visibility="invisible"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/social_network_link_button_border"
        app:layout_constraintEnd_toEndOf="@+id/social_network_link_button_border"
        app:layout_constraintStart_toStartOf="@+id/social_network_link_button_border"
        app:layout_constraintTop_toTopOf="@+id/social_network_link_button_border"/>
    <View
        android:id="@+id/social_network_link_button_bg_style_not_active"
        android:background="@drawable/bg_button_inactive_aura"
        android:visibility="invisible"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/social_network_link_button_border"
        app:layout_constraintEnd_toEndOf="@+id/social_network_link_button_border"
        app:layout_constraintStart_toStartOf="@+id/social_network_link_button_border"
        app:layout_constraintTop_toTopOf="@+id/social_network_link_button_border"/>
</androidx.constraintlayout.widget.ConstraintLayout>
