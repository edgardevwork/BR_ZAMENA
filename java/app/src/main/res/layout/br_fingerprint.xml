<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_rectangle_black_orange_small_dgr"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="12sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/br_fingerprint_header"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="@string/fingerprint_title"
        android:fontFamily="@font/muller_bold"/>
    <TextView
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/br_fingerprint_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:text="@string/fingerprint_hint"
        android:fontFamily="@font/muller_bold"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:srcCompat="@drawable/img_fingerprint_red"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <androidx.appcompat.widget.AppCompatButton
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@+id/br_fingerprint_butt"
            android:background="@drawable/bg_rectangle_orange_hgr_cr8_1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/common_exit"
            android:textAllCaps="false"
            android:fontFamily="@font/muller_bold"/>
    </FrameLayout>
</LinearLayout>
