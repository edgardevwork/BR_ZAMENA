<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="24sp"
        android:textColor="@color/white"
        android:id="@+id/text_view_donate"
        android:background="@color/black"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/common_donate"
        android:layout_weight="1"
        android:fontFamily="@font/montserrat_bold"
        android:paddingStart="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/close"
        android:padding="8dp"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:src="@drawable/ic_close_rounded"
        android:contentDescription="@string/common_close"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_donate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_donate"/>
</androidx.constraintlayout.widget.ConstraintLayout>
