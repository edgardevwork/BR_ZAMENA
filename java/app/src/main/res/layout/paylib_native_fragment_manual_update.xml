<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/invoice_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/button_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/paylib_native_view_invoice_details"/>
    <View
        android:id="@+id/view_divider"
        android:background="?attr/paylib_native_divider_color"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/paylib_design_spacer_8x"
        android:layout_marginTop="@dimen/paylib_design_spacer_4x"
        android:layout_marginRight="@dimen/paylib_design_spacer_8x"
        android:layout_marginHorizontal="@dimen/paylib_design_spacer_8x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invoice_details"/>
    <com.sdkit.paylib.paylibnative.p033ui.common.view.PaylibButton
        android:id="@+id/button_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/paylib_native_button.secondary"/>
    <include
        android:id="@+id/button_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/paylib_design_spacer_4x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/invoice_details"
        layout="@layout/paylib_native_view_close_button"/>
</androidx.constraintlayout.widget.ConstraintLayout>
