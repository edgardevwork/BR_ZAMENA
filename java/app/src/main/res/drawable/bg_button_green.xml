<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="#ff248509">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#ff248509"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#ff39d62e"
                android:endColor="#ff248509"
                android:angle="0"
                android:type="linear"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
</ripple>
